<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{20} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- MODEL -->
	<logger name="org.microcol.model" level="DEBUG"/>

	<!-- GUI -->
	<logger name="org.microcol.gui" level="DEBUG"/>
	<logger name="org.microcol.gui.FpsCounter" level="WARN"/>
	<logger name="org.microcol.gui.event.AbstractEventController" level="WARN"/>

	<!-- AI -->
	<logger name="org.microcol.ai" level="DEBUG"/>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
